<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".refsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/linkHead"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center_horizontal"
            android:text="REFERENCE LINKS"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.53"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.251"
            android:layout_marginTop="110dp"/>

        <TextView
            android:id="@+id/linkText"
            android:layout_width="410dp"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:text="@string/refs"
            android:textAlignment="center"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linkHead"
            app:layout_constraintVertical_bias="0.293"
            app:layout_goneMarginTop="50dp" />

        <Button
            android:id="@+id/databtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATA"
            android:textColor="#0C0C0C"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/linkHead"
            app:layout_constraintEnd_toStartOf="@+id/imagesbtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.609"
            android:onClick="gotoData"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/imagesbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IMAGES"
            android:textColor="#0C0C0C"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/linkHead"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.609"
            android:onClick="gotoImages"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/refsbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LINKS"
            android:textColor="#0C0C0C"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/linkHead"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toEndOf="@+id/imagesbtn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.609"
            android:onClick="gotoRefs"
            android:layout_marginTop="30dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>