<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".imagesActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/databtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="gotoData"
            android:text="DATA"
            android:textColor="#0C0C0C"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/linkHead"
            app:layout_constraintEnd_toStartOf="@+id/imagesbtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.609"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="50dp"/>

        <Button
            android:id="@+id/imagesbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="gotoImages"
            android:text="IMAGES"
            android:textColor="#0C0C0C"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/linkHead"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.609"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="-50dp"/>

        <Button
            android:id="@+id/refsbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="gotoRefs"
            android:text="LINKS"
            android:textColor="#0C0C0C"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/linkHead"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toEndOf="@+id/imagesbtn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.609"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="-49dp"/>

        <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/imagesHead"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="IMAGES"
            android:textAlignment="center"
            android:textSize="30dp"
            android:gravity="center_horizontal" />

        <ImageView
            android:id="@+id/img1"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/img3"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/img4"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>



    </LinearLayout>
</ScrollView>